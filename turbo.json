{
    "$schema": "https://turbo.build/schema.json",
    "tasks": {
      "test": {},
      "clean": {},
      "tsc": {
        "dependsOn": ["^build"]
      },
      "build": {
        "dependsOn": ["^build"],
        "outputs": ["dist/**"]
      },
      "dev": {
        "dependsOn": ["^build"],
        "cache": false,
        "persistent": true
      }
    }
  }